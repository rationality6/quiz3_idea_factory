<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>By </strong>
  <%= @post.user.full_name %>
</p>

<p>
  <strong>Created </strong>
  <%= @post.created_at %>
</p>

<% @post.members.each do |member|%>
  <%= member.user.first_name %>
  <%= member.user.last_name %>
<% end %>
<p>

</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= @post.errors.full_messages.join(", ")  %>
<%= bootstrap_form_for [@post, @comment] do |f| %>
<div>
  <%= f.text_field :body %>
</div>
<%= f.submit %>
<% end %>

<h3>comments</h3>
<div id='answers'>
  <% @post.comments.each do |comment| %>
  <div>
    <%= comment.body %>
    <div><%= comment.user.full_name %></div>
    <div><%= comment.created_at %></div>
  </div>
  <% end %>
</div>
